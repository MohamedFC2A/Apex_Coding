{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/public/favicon.ico"
    },
    {
      "src": "/favicon.svg",
      "dest": "/frontend/public/favicon.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}