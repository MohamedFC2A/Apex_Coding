{
  "name": "nexus-ai-coding",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace frontend run dev -- -p 5000 -H 0.0.0.0\" \"node backend/server.js\"",
    "build": "cd frontend && npm run build && node -e \"require('node:fs').cpSync('.next','../.next',{recursive:true,force:true})\"",
    "start": "concurrently \"npm --workspace frontend run start -- -p 5000 -H 0.0.0.0\" \"node backend/server.js\"",
    "setup": "cd frontend && npm install",
    "build:frontend": "npm --workspace frontend run build",
    "build:api": "node --check backend/index.js"
  },
  "dependencies": {
    "@codesandbox/sdk": "^2.3.0",
    "client-only": "^0.0.1",
    "convex": "^1.31.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "server-only": "^0.0.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2"
  }
}
